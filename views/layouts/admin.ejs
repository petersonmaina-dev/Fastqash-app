<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Admin Panel" %> - Fastqash</title>
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      display: flex;
      overflow-x: hidden;
      background-color: #f8f9fa;
    }

    /* Sidebar */
    .sidebar {
      min-width: 220px;
      max-width: 220px;
      background-color: #343a40;
      color: #fff;
      flex-shrink: 0;
      transition: all 0.3s;
    }

    .sidebar a {
      color: #fff;
      text-decoration: none;
    }

    .sidebar a:hover {
      background-color: #495057;
      border-radius: 6px;
    }

    .sidebar .nav-link {
      padding: 12px 20px;
    }

    .sidebar .active {
      background-color: #495057;
      border-radius: 6px;
    }

    /* Main content */
    .main-content {
      flex-grow: 1;
      padding: 30px;
    }

    /* Topbar */
    .topbar {
      height: 60px;
      background-color: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      margin-bottom: 20px;
      border-radius: 8px;
    }

    .topbar .toggle-btn {
      display: none;
      font-size: 1.5rem;
      cursor: pointer;
    }

    @media (max-width: 768px) {
      .sidebar {
        position: absolute;
        left: -220px;
        top: 0;
        height: 100%;
        z-index: 1000;
      }

      .sidebar.show {
        left: 0;
      }

      .topbar .toggle-btn {
        display: block;
      }
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar d-flex flex-column p-3" id="sidebar">
    <h4 class="text-center mb-4">Fastqash Admin</h4>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a href="/admin" class="nav-link <%= active === 'dashboard' ? 'active' : '' %>">Dashboard</a>
      </li>
      <li class="nav-item">
        <a href="/admin/posts" class="nav-link <%= active === 'posts' ? 'active' : '' %>">All Posts</a>
      </li>
      <% if(active === 'edit-post' && post) { %>
      <li class="nav-item">
        <a href="/admin/posts/edit/<%= post._id %>" class="nav-link <%= active === 'edit-post' ? 'active' : '' %>">Edit Post</a>
      </li>
      <% } %>
      <li class="nav-item">
        <a href="/admin/posts/new" class="nav-link <%= active === 'new-post' ? 'active' : '' %>">New Post</a>
      </li>
     
      <li class="nav-item mt-3">
        <a href="/admin/logout" class="nav-link text-danger">Logout</a>
      </li>
    </ul>
  </div>

  <!-- Main content -->
  <div class="main-content">
    <div class="topbar">
      <span class="toggle-btn" id="sidebarToggle">&#9776;</span>
      <h5 class="mb-0"><%= title %></h5>
      <span>Admin</span>
    </div>

    <!-- Page content -->
    <%- body %>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const toggleBtn = document.getElementById('sidebarToggle');
    const sidebar = document.getElementById('sidebar');
    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('show');
    });
  </script>
</body>
</html>
