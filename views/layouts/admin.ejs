<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "Admin Panel" %> - Fastqash</title>
  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      display: flex;
      overflow-x: hidden;
      background-color: #f8f9fa;
    }

    /* Sidebar */
    .sidebar {
      width: 240px;
      background-color: #212529;
      color: #fff;
      flex-shrink: 0;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      padding: 20px 0;
      overflow-y: auto;
      transition: left 0.3s ease;
    }

    .sidebar h4 {
      font-size: 1.2rem;
      font-weight: 600;
      text-align: center;
      margin-bottom: 1.5rem;
      color: #f8f9fa;
    }

    .sidebar .nav-link {
      color: #adb5bd;
      padding: 12px 20px;
      border-left: 4px solid transparent;
      transition: all 0.2s ease-in-out;
      display: flex;
      align-items: center;
      gap: 10px;
      font-weight: 500;
    }

    .sidebar .nav-link:hover {
      background-color: #343a40;
      color: #fff;
      border-left: 4px solid #0d6efd;
    }

    .sidebar .nav-link.active {
      background-color: #343a40;
      color: #fff;
      border-left: 4px solid #0d6efd;
    }

    .sidebar .nav-link.text-danger:hover {
      background-color: #dc3545;
      color: #fff;
      border-left: 4px solid #dc3545;
    }

    /* Main content */
    .main-content {
      flex-grow: 1;
      padding: 30px;
      margin-left: 240px;
      transition: margin-left 0.3s ease;
      width: 100%;
    }

    /* Topbar */
    .topbar {
      height: 60px;
      background-color: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      margin-bottom: 20px;
      border-radius: 8px;
    }

    .topbar .toggle-btn {
      display: none;
      font-size: 1.5rem;
      cursor: pointer;
    }

    /* Mobile */
    @media (max-width: 768px) {
      .sidebar {
        left: -240px;
        z-index: 1000;
      }
      .sidebar.show {
        left: 0;
      }
      .main-content {
        margin-left: 0;
      }
      .topbar .toggle-btn {
        display: block;
      }
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <h4>Fastqash Admin</h4>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a href="/admin" class="nav-link <%= active === 'dashboard' ? 'active' : '' %>">
          üìä Dashboard
        </a>
      </li>
      <li class="nav-item">
        <a href="/admin/posts" class="nav-link <%= active === 'posts' ? 'active' : '' %>">
          üìù All Posts
        </a>
      </li>
      <% if(active === 'edit-post' && post) { %>
      <li class="nav-item">
        <a href="/admin/posts/edit/<%= post._id %>" class="nav-link <%= active === 'edit-post' ? 'active' : '' %>">
          ‚úèÔ∏è Edit Post
        </a>
      </li>
      <% } %>
      <li class="nav-item">
        <a href="/admin/posts/new" class="nav-link <%= active === 'new-post' ? 'active' : '' %>">
          ‚ûï New Post
        </a>
      </li>
      <li class="nav-item mt-3">
        <a href="/admin/logout" class="nav-link text-danger">üö™ Logout</a>
      </li>
    </ul>
  </div>

  <!-- Main content -->
  <div class="main-content">
    <div class="topbar">
      <span class="toggle-btn" id="sidebarToggle">&#9776;</span>
      <h5 class="mb-0"><%= title %></h5>
      <span>Admin</span>
    </div>

    <!-- Page content -->
    <%- body %>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const toggleBtn = document.getElementById('sidebarToggle');
    const sidebar = document.getElementById('sidebar');
    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('show');
    });
  </script>
</body>
</html>
