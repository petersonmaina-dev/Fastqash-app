<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create New Post</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    .card { border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); transition: 0.2s; }
    .card:hover { transform: translateY(-3px); box-shadow: 0 12px 30px rgba(0,0,0,0.12); }
    h1 { color: #343a40; margin-bottom: 30px; font-weight: 600; }
    .btn-custom { border-radius: 25px; padding: 8px 25px; font-weight: 500; }
    .form-label { font-weight: 500; }
    textarea.form-control { resize: vertical; }
    #imagePreview { max-height: 200px; border-radius: 8px; display: none; margin-top: 10px; }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="card p-4">
      <h1>Create New Post</h1>

      <% if (typeof error !== "undefined") { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <% if (typeof success !== "undefined") { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>

      <form action="/admin/posts" method="POST" class="needs-validation" novalidate>
        <input type="hidden" name="imageBase64" id="imageBase64">

        <div class="mb-3">
          <label class="form-label">Title <span class="text-danger">*</span></label>
          <input type="text" name="title" class="form-control" required>
          <div class="invalid-feedback">Please enter a title.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Excerpt</label>
          <textarea name="excerpt" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Content <span class="text-danger">*</span></label>
          <textarea name="content" class="form-control" rows="6" required></textarea>
          <div class="invalid-feedback">Please enter the content.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Category <span class="text-danger">*</span></label>
          <input type="text" name="category" class="form-control" required>
          <div class="invalid-feedback">Please enter a category.</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Upload Image</label>
          <input type="file" accept="image/*" id="imageInput" class="form-control">
          <img id="imagePreview" alt="Image Preview" class="img-fluid mt-2">
        </div>

        <button type="submit" class="btn btn-success btn-custom">Create Post</button>
      </form>
    </div>
  </div>

  <script>
    // Image preview + Base64 storage
    const imageInput = document.getElementById('imageInput');
    const imagePreview = document.getElementById('imagePreview');
    const imageBase64Input = document.getElementById('imageBase64');

    imageInput.addEventListener('change', () => {
      const file = imageInput.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = e => {
          imagePreview.src = e.target.result;
          imagePreview.style.display = 'block';
          imageBase64Input.value = e.target.result; // store Base64 string
        };
        reader.readAsDataURL(file);
      } else {
        imagePreview.style.display = 'none';
        imageBase64Input.value = '';
      }
    });

    // Bootstrap validation
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
