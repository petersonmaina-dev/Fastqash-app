<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Post</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
    .card { border-radius: 12px; box-shadow: 0 6px 20px rgba(0,0,0,0.08); transition: 0.2s; }
    .card:hover { transform: translateY(-4px); box-shadow: 0 12px 30px rgba(0,0,0,0.12); }
    h1 { color: #343a40; margin-bottom: 30px; font-weight: 600; }
    .btn-custom { border-radius: 25px; font-weight: 500; }
    .form-label { font-weight: 500; }
    textarea.form-control { resize: vertical; }
    #currentImage, #imagePreview { max-height: 200px; border-radius: 8px; display: block; margin-bottom: 10px; }
    #imagePreview { display: none; }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="card p-4">
      <h1>Edit Post</h1>

      <!-- ✅ Fixed form action -->
      <form action="/admin/posts/edit/<%= post.id %>" method="POST">

        <!-- hidden input for base64 image -->
        <input type="hidden" name="imageBase64" id="imageBase64">

        <div class="mb-3">
          <label class="form-label">Title</label>
          <input type="text" name="title" class="form-control" value="<%= post.title %>" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Excerpt</label>
          <textarea name="excerpt" class="form-control" rows="3"><%= post.excerpt %></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Content</label>
          <textarea name="content" class="form-control" rows="6"><%= post.content %></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Category</label>
          <input type="text" name="category" class="form-control" value="<%= post.category %>">
        </div>

        <div class="mb-3">
          <label class="form-label">Current Image</label><br>
          <% if (post.image) { %>
            <img id="currentImage" src="<%= post.image %>" alt="Current Image" class="img-fluid">
          <% } else { %>
            <p class="text-muted">No image uploaded</p>
          <% } %>
        </div>

        <div class="mb-3">
          <label class="form-label">Replace Image (optional)</label>
          <input type="file" accept="image/*" id="imageInput" class="form-control">
          <img id="imagePreview" src="#" alt="New Image Preview" class="img-fluid mt-2">
        </div>

        <button type="submit" class="btn btn-warning btn-custom">Update Post</button>
      </form>
    </div>
  </div>

  <script>
    const imageInput = document.getElementById('imageInput');
    const imagePreview = document.getElementById('imagePreview');
    const imageBase64Input = document.getElementById('imageBase64');

    imageInput.addEventListener('change', () => {
      const file = imageInput.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = e => {
          imagePreview.src = e.target.result;
          imagePreview.style.display = 'block';
          imageBase64Input.value = e.target.result; // ✅ send base64 to backend
        };
        reader.readAsDataURL(file);
      } else {
        imagePreview.style.display = 'none';
        imageBase64Input.value = '';
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
