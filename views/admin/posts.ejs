<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Blog Posts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
      color: #343a40;
      margin-bottom: 25px;
      font-weight: 600;
    }

    .btn-custom {
      border-radius: 25px;
      font-weight: 500;
    }

    table.table {
      background-color: #fff;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 6px 20px rgba(0,0,0,0.08);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    table.table:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 25px rgba(0,0,0,0.12);
    }

    table.table th, table.table td {
      vertical-align: middle !important;
    }

    img.img-thumbnail {
      border-radius: 8px;
    }

    .btn + .btn {
      margin-left: 5px;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1>Manage Blog Posts</h1>
      <a href="/admin/posts/new" class="btn btn-success btn-custom">+ New Post</a>
    </div>

    <% if (posts && posts.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th>Image</th>
              <th>Title</th>
              <th>Category</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% posts.forEach(post => { %>
              <tr>
                <td style="width:100px;">
                  <% if (post.image) { %>
                    <img src="<%= post.image %>" alt="<%= post.title %>" class="img-thumbnail" style="max-height:70px;">
                  <% } else { %>
                    <span class="text-muted">No image</span>
                  <% } %>
                </td>
                <td><%= post.title %></td>
                <td><%= post.category %></td>
                <td><%= post.date.toDateString() %></td>
                <td>
                  <a href="/admin/posts/edit/<%= post._id %>" class="btn btn-sm btn-warning btn-custom">Edit</a>
                  <form action="/admin/posts/delete/<%= post._id %>" method="POST" style="display:inline;" 
                        onsubmit="return confirm('Are you sure you want to delete this post?');">
                    <button type="submit" class="btn btn-sm btn-danger btn-custom">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">No posts found. Start by creating a new post.</div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
