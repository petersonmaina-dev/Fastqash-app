
<div class="container-fluid py-4">

  <!-- Quick Stats -->
  <div class="row g-4 mb-5">
    <div class="col-md-4">
      <div class="card text-center shadow-sm border-0 rounded-4">
        <div class="card-body">
          <h2 class="card-title display-5 text-primary"><%= stats.totalPosts %></h2>
          <p class="card-text text-muted">Total Blog Posts</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm border-0 rounded-4">
        <div class="card-body">
          <h2 class="card-title display-5 text-success"><%= stats.totalCategories %></h2>
          <p class="card-text text-muted">Categories</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-center shadow-sm border-0 rounded-4">
        <div class="card-body">
          <h2 class="card-title display-5 text-warning"><%= stats.totalImages %></h2>
          <p class="card-text text-muted">Images in Gallery</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Posts -->
  <h3 class="mb-3">Latest Posts</h3>
  <% if (recentPosts && recentPosts.length > 0) { %>
    <div class="row g-4">
      <% recentPosts.forEach(post => { %>
        <div class="col-md-4">
          <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden hover-scale">
            <img src="<%= post.image %>" class="card-img-top" alt="<%= post.title %>" style="height:180px; object-fit:cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="text-muted mb-2"><small><%= post.date.toDateString() %></small></p>
              <div class="mt-auto d-flex justify-content-between">
                <a href="/admin/posts/edit/<%= post._id %>" class="btn btn-sm btn-warning">Edit</a>
                <a href="/blog/<%= post.slug %>" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-muted">No posts available yet. Start by <a href="/admin/posts/new" class="text-decoration-none">creating one</a>.</p>
  <% } %>
</div>

<style>
  .hover-scale {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .hover-scale:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }
</style>
