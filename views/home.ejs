<!-- âœ… AJAX Pagination Script -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const postsContainer = document.getElementById("posts-container");
    const paginationControls = document.getElementById("pagination-controls");
    const spinner = document.getElementById("spinner");

    paginationControls.addEventListener("click", async function (e) {
      if (e.target.tagName === "A") {
        e.preventDefault();
        const url = e.target.getAttribute("href");

        try {
          // Show spinner, hide posts
          spinner.style.display = "block";
          postsContainer.style.display = "none";

          const res = await fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } });
          const data = await res.json();

          // Replace posts
          postsContainer.innerHTML = data.postsHtml;

          // Replace pagination
          paginationControls.innerHTML = data.paginationHtml;

          // Hide spinner, show posts
          spinner.style.display = "none";
          postsContainer.style.display = "flex";

          // âœ… Smooth scroll back to top of posts
          postsContainer.scrollIntoView({ behavior: "smooth", block: "start" });

        } catch (err) {
          console.error("Error loading page:", err);
          spinner.style.display = "none";
          postsContainer.style.display = "flex";
        }
      }
    });
  });
</script>





